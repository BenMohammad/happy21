<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topAlertLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/alert_bg"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/topAlertTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="请下注"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/information_bottom_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/information_bottom_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/scoreViewHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_score_hint"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/scoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/betLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/betScoreHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bet_score_hint"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/betScoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/resultInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
</RelativeLayout>